---
const { menus, className } = Astro.props;
---

<ul class={className}>
	{
		menus.map(({ link, name, submenus }) => (
			<li>
				<a href={link} class={submenus ? 'haveSubmenus' : ''}>
					<span>
						{name}
						<br />
						{name}
					</span>
				</a>
				{submenus && (
					<ul class='submenus'>
						{submenus.map(({ link, name }) => (
							<li>
								<a href={link}>{name}</a>
							</li>
						))}
					</ul>
				)}
			</li>
		))
	}
</ul>

<style lang='scss'>
	li {
		position: relative;
		margin: 0 2rem;

		a {
			position: relative;
			display: block;
			font-weight: bold;
			font-family: var(--title_font);
			padding: 0 1rem;
			width: fit-content;
			height: 1rem;
			overflow: hidden;

			span {
				display: block;
				height: 1rem;
				line-height: 1;
				transition: transform 0.35s cubic-bezier(0.4, 0, 0.2, 1);
			}

			&:hover {
				color: var(--blue);

				span {
					transform: translateY(-100%);
				}

				&:after {
					opacity: 1;
					transform: translateY(-50%) scale(1);
				}

				&.haveSubmenus:before {
					top: 6px;
					transform: rotate(-45deg);
					border-color: var(--blue);
				}
			}

			&:after {
				content: '';
				position: absolute;
				top: calc(50% - 1px);
				left: 0px;
				transform: translateY(-50%) scale(0);
				width: 6px;
				height: 6px;
				border-radius: 10px;
				background: var(--blue);
				opacity: 0;
				transition:
					transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
					opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
			}

			&.haveSubmenus {
				padding-right: 1.4rem;
				&:before {
					content: '';
					position: absolute;
					top: -1px;
					right: 2px;
					transform: rotate(135deg);
					width: 12px;
					height: 12px;
					border-top: 2px solid var(--black);
					border-right: 2px solid var(--black);
					border-radius: 1px;
					transition:
						transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
						border-color 0.3s cubic-bezier(0.4, 0, 0.2, 1),
						top 0.3s cubic-bezier(0.4, 0, 0.2, 1);
				}
			}
		}

		> ul {
			background-color: var(--white);
			border-radius: 5px;
			position: absolute;
			top: 70%;
			left: 0;
			opacity: 0;
			pointer-events: none;
			z-index: 999;
			transition:
				opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
				top 0.3s cubic-bezier(0.4, 0, 0.2, 1);

			li {
				margin: 0;
				padding: 0;

				a {
					text-align: left;
					padding: 0.6rem 1rem;
					overflow: auto;
					height: auto;

					&:after {
						content: none;
					}
				}

				&:first-of-type {
					padding-top: 1rem;
				}
			}
		}

		a:hover + ul,
		> ul:hover {
			opacity: 1;
			top: 100%;
			pointer-events: all;
		}

		&:not(.submenus li):last-child {
			margin-right: 0;

			a {
				padding-right: 0;
			}
		}

		&:not(.submenus li):first-child {
			margin-left: 0;

			a {
				margin-left: -1rem;
			}
		}

		@media screen and (max-width: 1025px) {
			margin: 0 !important;

			a {
				margin: 1.5rem 0 !important;
				&:after {
					left: 0 !important;
				}
			}
		}
	}
</style>
