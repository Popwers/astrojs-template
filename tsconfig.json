{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@pages/*": ["src/pages/*"],
			"@styles/*": ["src/styles/*"],
			"@layouts/*": ["src/layouts/*"],
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@data/*": ["src/data/*"],
			"@lib/*": ["src/lib/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@stores/*": ["src/stores/*"],
			"@actions/*": ["src/actions/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"checkJs": true
	},
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"]
}
