{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@pages/*": ["src/pages/*"],
			"@styles/*": ["src/styles/*"],
			"@layouts/*": ["src/layouts/*"],
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@data/*": ["src/data/*"],
			"@lib/*": ["src/lib/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@stores/*": ["src/stores/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"checkJs": true
	}
}
